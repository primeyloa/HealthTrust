# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/healthtrust

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Alle AI API Configuration
ALLEAI_API_KEY=your-alle-ai-api-key-here
ALLEAI_BASE_URL=https://api.alle-ai.com/api/v1

# Default AI Models for different tasks
DEFAULT_CHAT_MODELS=["gpt-4o", "claude-3.5-sonnet"]
DEFAULT_FACT_CHECK_MODELS=["gpt-4o", "deepseek-r1"]
DEFAULT_SUMMARY_MODELS=["gpt-4o"]

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173
